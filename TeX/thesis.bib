title = {{Interplay of Neutrino Opacities in Core-Collapse Supernova Simulations}},
url = {http://arxiv.org/abs/1206.1086 http://stacks.iop.org/0004-637X/760/i=1/a=94?key=crossref.a8f516d3ea008406795cfcd063129b2b},
