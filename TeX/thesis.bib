issn = {2050-3911},
journal = {Progress of Theoretical and Experimental Physics},
month = dec,
number = {1},
pages = {1A309},
title = {{Core-collapse supernovae: Reflections and directions}},
url = {http://arxiv.org/abs/1211.1378 http://ptep.oxfordjournals.org/cgi/doi/10.1093/ptep/pts067},
